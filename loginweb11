    <script>
        /**
         * Authentication ක්‍රියාවලිය පාලනය කිරීම.
         */
        function handleAuth(event) {
            event.preventDefault();
            
            const btn = document.getElementById('submitBtn');
            
            // බොත්තම 'Processing' තත්වයට පත් කිරීම
            btn.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin"></i> AUTHORIZING...';
            btn.style.background = '#333';
            btn.style.color = '#fff';
            btn.style.pointerEvents = 'none';

            // සර්වර් එකකට සම්බන්ධ වන බව පෙන්වීමට කුඩා Delay එකක් ලබා දීම
            setTimeout(() => {
                btn.innerHTML = '<i class="fa-solid fa-shield-check"></i> LINK ESTABLISHED';
                btn.style.background = '#22c55e';
                
                // ඇඩ්මින් සාදරයෙන් පිළිගැනීම
                setTimeout(() => {
                    alert("Welcome back, Master. Droid-Venom and JARVIS modules are now synchronized in luxury mode.");
                    location.reload();
                }, 800);
            }, 2500);

            return false;
        }

        // Mousemove Effect (Card එක මඳක් ඇලවීම)
        document.addEventListener('mousemove', (e) => {
            const card = document.querySelector('.glass-card');
            const x = (window.innerWidth / 2 - e.pageX) / 60;
            const y = (window.innerHeight / 2 - e.pageY) / 60;
            
            card.style.transform = `rotateX(${y}deg) rotateY(${-x}deg)`;
        });

    </script>
